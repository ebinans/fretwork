{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Firefox",
			"type": "firefox",
			"request": "launch",
			"file": "${workspaceFolder}/dist/index.html",
			"preLaunchTask": "tsc: build - tsconfig.json"
		},
		{
			"name": "Edge",
			"type": "pwa-msedge",
			"request": "launch",
			"file": "${workspaceFolder}/dist/index.html",
			"preLaunchTask": "tsc: build - tsconfig.json"
		},
		{
			"name": "Chrome",
			"type": "pwa-chrome",
			"request": "launch",
			"file": "${workspaceFolder}/dist/index.html",
			"preLaunchTask": "tsc: build - tsconfig.json"
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Electron: Main",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"dev"
			]
		},
		{
			"name": "Electron: Renderer",
			"type": "chrome",
			"request": "attach",
			"port": 9223,
			"webRoot": "${workspaceRoot}",
			"timeout": 30000
		}
	],
	"compounds": [
		{
			"name": "Electron: All",
			"configurations": [
				"Electron: Main",
				"Electron: Renderer"
			]
		}
	]
}