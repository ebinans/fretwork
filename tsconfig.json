{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"strict": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"outDir": "dist",
		"baseUrl": ".",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}